            android:layout_marginRight="10dp"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@color/color14"
            android:id="@+id/img6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@color/color15"
            android:id="@+id/img7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@color/color1"
            android:id="@+id/img8"
            android:layout_marginLeft="10dp"
